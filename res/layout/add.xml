    <!-- android:id="@+id/content_edit" -->
    <!-- android:layout_width="fill_parent" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:inputType="textMultiLine" /> -->

</LinearLayout> <!-- </RelativeLayout> -->
